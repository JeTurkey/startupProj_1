<script>
    var productCount = 1
    $('#addProductInfo').click(function () {
        if (productCount > 4) {
            next()
        }
        $('#productInfo' + productCount).last().after('<div id="productInfo' + (productCount + 1) + '">' +
            '<div class="col">' +
            '<label for="companyInputDetail"> 产品 ' + (productCount + 1) + ' </label>' +
            '<input type="text" class="form-control" name="detail' + (productCount + 1) + '" placeholder="产品名称"' +
            '</div>' +
            '<div class="col">' +
            '<label for="companyInputDetailDescription"> 产品描述 ' + (productCount + 1) + '</label>' +
            '<input type="text" class="form-control" name="detailDescription' + (productCount + 1) + '" placeholder="产品描述">' +
            '</div>' +
            '</div>')
        productCount += 1
    });

    $('#dropProductInfo').click(function () {
        if (productCount == 1) {
            next()
        }
        $('#productInfo' + productCount).last().remove();
        productCount -= 1
    })

    var financeCount = 1
    $('#addFinanceInfo').click(function() {
        if(financeCount > 4) {
            next()
        }
        $('#financeInfo' + financeCount).last().after('<div id="financeInfo' + (financeCount + 1) + '">' +
                            '<div class="col-sm">' +
                                '<label for="companyFinanceDate"> 日期' + (financeCount + 1) + ' </label>' +
                                '<input type="text" class="form-control" name="financeDate' + (financeCount + 1) + '" placeholder="YYYY/MM" aria-describedby="financeHelp">' +
                            '</div>' +
                            '<div class="col-sm">' +
                                '<label for="companyFinanceRound"> 轮次' + (financeCount + 1) + ' </label>' +
                                '<input type="text" class="form-control" name="financeRound' + (financeCount + 1) + '" placeholder="轮次">' +
                            '</div>' +
                            '<div class="col-sm">' +
                                '<label for="companyFinanceAmount"> 金额' + (financeCount + 1) + ' </label>' +
                                '<input type="text" class="form-control" name="financeAmount' + (financeCount + 1) + '" placeholder="金额">' +
                            '</div>' +
                            '<div class="col-sm">' +
                                '<label for="companyFinanceInvestor"> 投资方' + (financeCount + 1) + ' </label>' +
                                '<input type="text" class="form-control" name="financeInvestor' + (financeCount + 1) + '" placeholder="投资方">' +
                            '</div>' +
                        '</div>')
                        financeCount += 1
    })

    $('#dropFinanceInfo').click(function() {
        if(financeCount == 1) {
            next()
        }
        $('#financeInfo' + financeCount).last().remove();
        financeCount -= 1;
    })





</script>

