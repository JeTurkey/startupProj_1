<% include ./partials/headerLoggin %>

<div class="container-fluid">
    <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
            <div class="sidebar-sticky" style="margin-top: 5%;">
                <ul class="list-group">
                    <a class="list-group-item list-group-item-action" href="/usrHome"> Dashboard </a>
                    <a class="list-group-item list-group-item-action" href="/industry"> 行业数据 </a>
                    <a class="list-group-item list-group-item-action" href="/news"> 行业情绪指数 </a>
                    <a class="list-group-item list-group-item-action" href="/dataBase"> Database </a>
                    <a class="list-group-item list-group-item-action" href="/updateLog"> Update Log </a>
                </ul>
            </div>
        </nav>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
            <!-- 代码在这 -->
            <div class="row container-fluid">
                <form action="/database/new" method="POST">
                    <select name="industry" class="form-control">
                        <option value="">区块链</option>
                        <option value="">大数据</option>
                        <option value="">人工智能</option>
                        <option value="">医疗</option>
                    </select>
                    <div class="row form-group">
                        <label for="companyInputName"> Name </label>
                        <input type="text" class="form-control" name="name" placeholder="企业名称">
                    </div>
                    <div class="row form-group">
                        <label for="companyInputLocation"> Location </label>
                        <input type="text" class="form-control" name="location" placeholder="Location">
                        <small class="form-text text-muted"> 例如：北京市</small>
                    </div>
                    <div class="row form-group">
                        <label for="companyInputField"> 细分领域 </label>
                        <input type="text" class="form-control" name="field" placeholder="细分领域">
                    </div>
                    <div class="row form-group">
                        <label for="companyInputCreatedYear"> 成立时间 </label>
                        <input type="text" class="form-control" name="createdYear" placeholder="成立时间">
                    </div>
                    <div class="row form-group">
                        <label for="companyInputDescription"> 简介 </label>
                        <input type="text" class="form-control" name="description" placeholder="简介">
                    </div>
                    <div class="row form-group">
                        <label for="companyInputFullName"> 母公司名称 </label>
                        <input type="text" class="form-control" name="fullName" placeholder="母公司名称">
                    </div>
                    <div class="row form-group">
                        <label for="companyInputPopulation"> 公司人数 </label>
                        <input type="text" class="form-control" name="population" placeholder="公司人数" value="未知">
                        <small id="populationHelp" class="form-text text-muted"> Please leave it there if population is
                            unkonwn </small>
                    </div>
                    <div class="row form-group">
                        <label for="companyInputDetail"> 产品详细 </label>
                    </div>
                    <div class="row form-group">
                        <div id="productInfo1">
                            <div class="col">
                                <label for="companyInputDetail"> 产品 </label>
                                <input type="text" class="form-control" name="detail" placeholder="产品名称" value="未知">
                            </div>
                            <div class="col">
                                <label for="companyInputDetailDescription"> 产品描述</label>
                                <input type="text" class="form-control" name="detailDescription" placeholder="产品描述">
                            </div>
                        </div>
                        <div class="input-group" id="productInfoGroup">
                            <button class="btn btn-primary" type="button" id="addProductInfo" style="margin-top: 5%;">
                                <span>+</span> </button>
                            <button class="btn btn-secondary" type="button" id="dropProductInfo"> <span> - </span>
                            </button>
                        </div>
                    </div>
                    <div class="row form-group">
                        <label for="companyInputFinance"> 融资情况 </label>
                    </div>
                    <div class="row form-group">
                        <div id="financeInfo1">
                            <div class="col-sm">
                                <label for="companyFinanceDate"> 日期 </label>
                                <input type="text" class="form-control" name="financeDate" placeholder="YYYY/MM"
                                    aria-describedby="financeHelp">
                            </div>
                            <div class="col-sm">
                                <label for="companyFinanceRound"> 轮次 </label>
                                <input type="text" class="form-control" name="financeRound" placeholder="轮次">
                            </div>
                            <div class="col-sm">
                                <label for="companyFinanceAmount"> 金额 </label>
                                <input type="number" class="form-control" name="financeAmount" placeholder="金额">
                            </div>
                            <div class="col-sm">
                                <label for="companyFinanceAmount"> 货币 </label>
                                <input type="text" class="form-control" name="financeCurrency" placeholder="币种">
                            </div>
                            <div class="col-sm">
                                <label for="companyFinanceInvestor"> 投资方 </label>
                                <input type="text" class="form-control" name="financeInvestor" placeholder="投资方">
                            </div>
                        </div>
                    </div>
                    <div class="input-group" id="financeInfoGroup">
                        <button class="btn btn-primary" type="button" id="addFinanceInfo" style="margin-top: 5%;">
                            <span>+</span> </button>
                        <button class="btn btn-secondary" type="button" id="dropFinanceInfo"> <span> - </span>
                        </button>
                    </div>

                    <div class="row form-group">
                        <label for="companyInputTeam"> 团队情况 </label>
                    </div>
                    <div class="row form-group">
                        <div id="teamInfo1">
                            <div class="col-sm">
                                <label for="companyTeamName"> 姓名 </label>
                                <input type="text" class="form-control" name="teamName" placeholder="姓名">
                            </div>
                            <div class="col-sm">
                                <label for="companyTeamPosition"> 职位 </label>
                                <input type="text" class="form-control" name="teamPosition" placeholder="职位">
                            </div>
                            <div class="col-sm">
                                <label for="companyTeamBackground"> 背景 </label>
                                <input type="text" class="form-control" name="teamBackground" placeholder="背景">
                            </div>
                        </div>
                    </div>
                    <div class="input-group" id="teamInfoGroup">
                        <button class="btn btn-primary" type="button" id="addTeamInfo" style="margin-top: 5%;">
                            <span> + </span> </button>
                        <button class="btn btn-secondary" type="button" id="dropTeamInfo"> <span> - </span>
                        </button>
                    </div>
                    <div class="row form-group">
                        <label for="companyInputNews"> 新闻 </label>
                    </div>
                    <div class="row form-group">
                        <div id="news1">
                            <div class="col-sm">
                                <label for="newsTitle"> 新闻标题 </label>
                                <input type="text" class="form-control" name="newsTitle" placeholder="新闻标题">
                            </div>
                            <div class="col-sm">
                                <label for="newsTitle"> 新闻来源 </label>
                                <input type="text" class="form-control" name="newsSource" placeholder="新闻来源">
                            </div>
                            <div class="col-sm">
                                <label for="newsTitle"> 新闻日期 </label>
                                <input type="text" class="form-control" name="newsDate" placeholder="新闻日期">
                            </div>
                            <div class="col-sm">
                                <label for="newsTitle"> 新闻内容 </label>
                                <input type="text" class="form-control" name="newsContent" placeholder="新闻内容">
                            </div>
                        </div>
                    </div>
                    <div class="input-group" id="newsGroup">
                        <button class="btn btn-primary" type="button" id="addNews" style="margin-top: 5%;">
                            <span> + </span> </button>
                        <button class="btn btn-secondary" type="button" id="dropNews"> <span> - </span>
                        </button>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="confirm">
                        <label for="confirm" class="form-check-label"> 确认以上信息准确 </label>
                    </div>
                    <button type="submit" class="btn btn-primary"> Submit </button>
                </form>
            </div>
        </main>
    </div>
</div>

<script>
    var productCount = 1
    $('#addProductInfo').click(function () {
        if (productCount < 5) {
            $('#productInfo' + productCount).last().after('<div id="productInfo' + (productCount + 1) + '">' +
                '<div class="col">' +
                '<label for="companyInputDetail"> 产品 ' + (productCount + 1) + ' </label>' +
                '<input type="text" class="form-control" name="detail" placeholder="产品名称"' +
                '</div>' +
                '<div class="col">' +
                '<label for="companyInputDetailDescription"> 产品描述 ' + (productCount + 1) + '</label>' +
                '<input type="text" class="form-control" name="detailDescription" placeholder="产品描述">' +
                '</div>' +
                '</div>')
            productCount += 1
        }
    });

    $('#dropProductInfo').click(function () {
        if (productCount > 1) {
            $('#productInfo' + productCount).last().remove();
            productCount -= 1
        }

    })

    var financeCount = 1
    $('#addFinanceInfo').click(function () {
        if (financeCount < 5) {
            $('#financeInfo' + financeCount).last().after('<div id="financeInfo' + (financeCount + 1) + '">' +
                '<div class="col-sm">' +
                '<label for="companyFinanceDate"> 日期' + (financeCount + 1) + ' </label>' +
                '<input type="text" class="form-control" name="financeDate" placeholder="YYYY/MM" aria-describedby="financeHelp">' +
                '</div>' +
                '<div class="col-sm">' +
                '<label for="companyFinanceRound"> 轮次' + (financeCount + 1) + ' </label>' +
                '<input type="text" class="form-control" name="financeRound" placeholder="轮次">' +
                '</div>' +
                '<div class="col-sm">' +
                '<label for="companyFinanceAmount"> 金额' + (financeCount + 1) + ' </label>' +
                '<input type="number" class="form-control" name="financeAmount" placeholder="金额">' +
                '</div>' +
                '<div class="col-sm">' +
                '<label for="companyFinanceAmount"> 货币' + (financeCount + 1) + ' </label>' +
                '<input type="text" class="form-control" name="financeCurrency" placeholder="币种">' +
                '</div>' +
                '<div class="col-sm">' +
                '<label for="companyFinanceInvestor"> 投资方' + (financeCount + 1) + ' </label>' +
                '<input type="text" class="form-control" name="financeInvestor" placeholder="投资方">' +
                '</div>' +
                '</div>')
            financeCount += 1


        }
    })
    $('#dropFinanceInfo').click(function () {
        if (financeCount > 1) {
            $('#financeInfo' + financeCount).last().remove();
            financeCount -= 1;
        }

    })

    var teamCount = 1
    $('#addTeamInfo').click(function () {
        if (teamCount < 5) {
            $('#teamInfo' + teamCount).last().after('<div id="teamInfo' + (teamCount + 1) + '">' +
                '<div class="col-sm">' +
                '<label for="companyTeamName"> 姓名 ' + (teamCount + 1) + ' </label>' +
                '<input type="text" class="form-control" name="teamName" placeholder="姓名">' +
                '</div>' +
                '<div class="col-sm">' +
                '<label for="companyTeamPosition"> 职位 ' + (teamCount + 1) + ' </label>' +
                '<input type="text" class="form-control" name="teamPosition" placeholder="职位">' +
                '</div>' +
                '<div class="col-sm">' +
                '<label for="companyTeamBackground"> 背景 ' + (teamCount + 1) + ' </label>' +
                '<input type="text" class="form-control" name="teamBackground" placeholder="背景">' +
                '</div>' +
                '</div>')
            teamCount += 1
        }

    })
    $('#dropTeamInfo').click(function () {
        if (teamCount > 1) {
            $('#teamInfo' + teamCount).last().remove();
            teamCount -= 1
        }

    })

    var newsCount = 1
    $('#addNews').click(function () {
        $('#news' + newsCount).last().after('<div id="news' + (newsCount + 1) + '">' +
            '<div class="col-sm">' +
            '<label for="newsTitle"> 新闻标题 ' + (newsCount + 1) + ' </label>' +
            '<input type="text" class="form-control" name="newsTitle" placeholder="新闻标题">' +
            '</div>' +
            '<div class="col-sm">' +
            '<label for="newsTitle"> 新闻来源 ' + (newsCount + 1) + ' </label>' +
            '<input type="text" class="form-control" name="newsSource" placeholder="新闻来源">' +
            '</div>' +
            '<div class="col-sm">' +
            '<label for="newsTitle"> 新闻日期 ' + (newsCount + 1) + ' </label>' +
            '<input type="text" class="form-control" name="newsDate" placeholder="新闻日期">' +
            '</div>' +
            '<div class="col-sm">' +
            '<label for="newsTitle"> 新闻内容 ' + (newsCount + 1) + ' </label>' +
            '<input type="text" class="form-control" name="newsContent" placeholder="新闻内容">' +
            '</div>' +
            '</div>')
        newsCount += 1
    })

    $('#dropNews').click(function () {
        if (newsCount > 1) {
            $('#news' + newsCount).last().remove()
            newsCount -= 1
        }
    })



</script>

<% include ./partials/footer %>