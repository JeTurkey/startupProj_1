<script>
    // 按照省区分数量
    var ctx1 = document.getElementById('bidCountByProvince1').getContext('2d')

    var myChart = new Chart(ctx1, {
        type: 'bar',
        data: {
            labels: ['<%= countByLocation[0]._id %>', '<%= countByLocation[1]._id %>', '<%= countByLocation[2]._id %>', '<%= countByLocation[3]._id %>', '<%= countByLocation[4]._id %>', '<%= countByLocation[5]._id %>',
                     '<%= countByLocation[6]._id %>', '<%= countByLocation[7]._id %>', '<%= countByLocation[8]._id %>', '<%= countByLocation[9]._id %>'],
            datasets: [{
                label: '计数',

                data: [<%= countByLocation[0].count %>, <%= countByLocation[1].count %>, <%= countByLocation[2].count %>, <%= countByLocation[3].count %>,
                       <%= countByLocation[4].count %>, <%= countByLocation[5].count %>, <%= countByLocation[6].count %>, <%= countByLocation[7].count %>,
                       <%= countByLocation[8].count %>, <%= countByLocation[9].count %>],

                backgroundColor: 'lightblue'
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    },
                    gridLines: {
                        offsetGridLines: true
                    }
                }]
            }
        }
    })

    // 按照类型区分数量
    var ctx2 = document.getElementById('bidCountByProvince2').getContext('2d')

    var myChart = new Chart(ctx2, {
        type: 'bar',
        data: {
            labels: ['<%= countBySegment[0]._id %>', '<%= countBySegment[1]._id %>', '<%= countBySegment[2]._id %>', '<%= countBySegment[3]._id %>', '<%= countBySegment[4]._id %>', '<%= countBySegment[5]._id %>',
