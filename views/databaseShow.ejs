<% include ./partials/headerLoggin %>

<div class="container-fluid">

        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="sidebar-sticky" style="margin-top: 5%;">
                        <ul class="list-group">
                                <a class="list-group-item list-group-item-action" href="/usrHome"> Dashboard </a>
                                <a class="list-group-item list-group-item-action" href="/industry"> 行业数据 </a>
                                <a class="list-group-item list-group-item-action" href="/news"> 行业情绪指数 </a>
                                <a class="list-group-item list-group-item-action" href="/industryEmotion"> 分行业情绪指数 </a>
                                <a class="list-group-item list-group-item-action" href="/database"> Database </a>
                                <a class="list-group-item list-group-item-action" href="/updateLog"> Update Log </a>
                            </ul>
                </div>
            </nav>

            <div class="col-md-10">
                <!-- 代码在这 -->
                <% if(currentUser.companyID == 320131){ %>
                    <a href="/database/<%= data._id %>/edit"> 更新数据 (Update Data) </a>
                <% } else { %>
                    <a disabled> 更新数据 (Update Data) </a>
                <% } %>
                <p> <%= data.industry %> </p>
                <p> <%= data.name %> </p>
                <p> <%= data.location %> </p>
                <p> <%= data.field %> </p>
                <p> <%= data.createdYear %> </p>
                <p> <%= data.fullName %> </p>
                <p> <%= data.description %> </p>
                <p> <%= data.population %> </p>
                <% data.productDetail.forEach(function(details){ %>
                    <ul>
                        <li> <%= details.detailName %> </li>

                        <li> <%= details.detailDescription %> </li>
                    </ul>

                <% }) %>
                <% data.finance.forEach(function(finance){ %>
                    <ul>
                        <li> <%= finance.financeRound %> </li>
                        <li> <%= finance.financeDate %> </li>
                        <li> <%= finance.financeAmount %> </li>
                        <li> <%= finance.financeCurrency %> </li>
                        <li> <%= finance.finnanceInvestor %> </li>
                    </ul>
                    
                <% }) %>
                <% data.team.forEach(function(team){ %>
                    <ul>
                        <li> <%= team.teamName %> </li>
                        <li> <%= team.teamPosition %> </li>
                        <li> <%= team.teamBackground %> </li>
                    </ul>
                <% }) %>
                <% data.news.forEach(function(news){ %>
                    <ul>
                        <li> <%= news.newsTitle %> </li>
                        <li> <%= news.newsSource %> </li>
                        <li> <%= news.newsDate %> </li>
                        <li> <%= news.newsContent %> </li>
                    </ul>
                <% }) %>

                
        </div>
</div>

<% include ./partials/footer %>
